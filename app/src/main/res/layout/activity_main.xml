<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f1f1f1"
    android:id="@+id/Layout1">

    <TextView
        android:id="@+id/labelScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainLabel1"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainLabel2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelScore"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/teal_700"/>
    <!--android:textSize="100dp"-->

    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/Score"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/labelBenar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainLabelBenar"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="1dp"
            android:textColor="#535252"/>
        <TextView
            android:id="@+id/sBenar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainLabelScoreBenar"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#535252"/>
        <TextView
            android:id="@+id/labelSalah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainLabelSalah"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:textColor="#535252"/>
        <TextView
            android:id="@+id/sSalah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mainLabelScoreSalah"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#535252"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_Lat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latihan 1"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_Lat2"/>
    <Button
        android:id="@+id/btn_Lat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latihan 2"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_Lat3"/>
    <Button
        android:id="@+id/btn_Lat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Latihan 3"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_Reset"
        android:layout_marginBottom="60dp"/>
    <Button
        android:id="@+id/btn_Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>