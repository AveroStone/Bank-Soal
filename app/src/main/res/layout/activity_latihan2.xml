<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Latihan2"
    android:background="@color/teal_700">

    <LinearLayout
        android:id="@+id/LayoutSoal1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:background="#f1f1f1">

        <TextView
            android:id="@+id/LabelSoal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soal 1:"
            android:textColor="@color/purple_700"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/Soal1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 - 1 = ?"
            android:textColor="@color/black"
            android:textSize="60dp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/L2S1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true">
                <RadioButton
                    android:id="@+id/Jwb_2_1A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-3"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/Jwb_2_1B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/Jwb_2_1C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-5"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/Jwb_2_1D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutSoal2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutSoal1"
        android:layout_marginTop="30dp"
        android:background="#f1f1f1">

        <TextView
            android:id="@+id/LabelSoal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soal 2:"
            android:textColor="@color/purple_700"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/Soal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8 - 3 = ?"
            android:textColor="@color/black"
            android:textSize="60dp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/L2S2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true">
                <RadioButton
                    android:id="@+id/Jwb_2_2A"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/Jwb_2_2B"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/Jwb_2_2C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-5"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <RadioButton
                    android:id="@+id/Jwb_2_2D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
            </RadioGroup>
        </RelativeLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
		android:onClick="nextL2"
        app:srcCompat="@drawable/ic_btnnext"
        android:backgroundTint="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>